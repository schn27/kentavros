			</traverse>
			<output>fcs/right-aileron-pos-norm</output>
		</kinematic>

		<aerosurface_scale name="Right Aileron Scale">
			<input>fcs/right-aileron-pos-norm</input>
			<range>
				<min>-15</min>
				<max>10</max>
			</range>
			<output>fcs/right-aileron-pos-deg</output>
		</aerosurface_scale>

	</channel>

	<channel name="Pitch">
		<kinematic name="Elevator Control">
			<input>-fcs/elevator-cmd-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.1</time>
				</setting>
			</traverse>
			<output>fcs/elevator-pos-norm</output>
		</kinematic>

		<aerosurface_scale name="Elevator Scale">
			<input>fcs/elevator-pos-norm</input>
			<range>
				<min>-10</min>
				<max>10</max>
			</range>
			<output>fcs/elevator-pos-deg</output>
		</aerosurface_scale>
	</channel>

	<channel name="Yaw">
		<kinematic name="Rudder Control">
			<input>-fcs/rudder-cmd-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.1</time>
				</setting>
			</traverse>
			<output>fcs/rudder-pos-norm</output>
		</kinematic>

		<aerosurface_scale name="Rudder Scale">
			<input>fcs/rudder-pos-norm</input>
			<range>
				<min>-10</min>
				<max>10</max>
			</range>
			<output>fcs/rudder-pos-deg</output>
		</aerosurface_scale>

		<kinematic name="fcs/nacelle-cmd-norm-filtered">
			<input>fcs/nacelle-cmd-norm</input>
			<traverse>
				<setting>
					<position>0</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.2</time>
				</setting>
			</traverse>
		</kinematic>

		<aerosurface_scale name="fcs/nacelle-angle-rad">
			<input>fcs/nacelle-cmd-norm-filtered</input>
