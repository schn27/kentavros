<!-- *************************** CONTROLS ********************************** -->
<flight_control name="FCS: kentavros">
	<channel name="Roll">
		<summer name="fcs/left-aileron-cmd-norm">
			<input>fcs/aileron-cmd-norm</input>
			<bias>-0.2</bias>
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
		</summer>

		<summer name="fcs/right-aileron-cmd-norm">
			<input>-fcs/aileron-cmd-norm</input>
			<bias>-0.2</bias>
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
		</summer>

		<kinematic name="Left Aileron Control">
			<input>fcs/left-aileron-cmd-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.1</time>
				</setting>
			</traverse>
			<output>fcs/left-aileron-pos-norm</output>
		</kinematic>

		<aerosurface_scale name="Left Aileron Scale">
			<input>fcs/left-aileron-pos-norm</input>
			<range>
				<min>-15</min>
				<max>10</max>
			</range>
			<output>fcs/left-aileron-pos-deg</output>
		</aerosurface_scale>

		<kinematic name="Right Aileron Control">
			<input>fcs/right-aileron-cmd-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.1</time>
