<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

<path>kentavros-model.ac</path>

<!-- front right nacelle -->

<animation>
	<type>rotate</type>
	<object-name>prop.fr</object-name>
	<object-name>motor.fr</object-name>
	<object-name>nacelle.fr</object-name>
	<property>/fdm/jsbsim/propulsion/engine/pitch-angle-rad</property>
	<factor>57.29578</factor>
	<offset-deg>-90</offset-deg>
	<center>
		<x-m> 0.312</x-m>
		<y-m> 0.000</y-m>
		<z-m> 0.054</z-m>
	</center>
	<axis>
		<x> 0</x>
		<y> 1</y>
		<z> 0</z>
	</axis>
</animation>

<animation>
	<type>spin</type>
	<object-name>prop.fr</object-name>
	<property>engines/engine[0]/rpm</property>
	<factor>1</factor>
	<center>
		<x-m> 0.312</x-m>
		<y-m> 0.749</y-m>
		<z-m> 0.183</z-m>
	</center>
	<axis>
		<x> 0</x>
		<y> 0</y>
		<z> 1</z>
	</axis>
</animation>

